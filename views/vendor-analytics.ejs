    <script>
        const reportTypes = <%- JSON.stringify(reportTypes) %>;
        const reportTypeKeys = Object.keys(reportTypes);
        const dataByAsin = <%- JSON.stringify(dataByAsin) %>;
        const asinTrackerData = <%- JSON.stringify(asinTrackerData) %>;
        const lastOrderedByAsin = <%- JSON.stringify(lastOrderedByAsin) %>;
        const productTitles = <%- JSON.stringify(productTitles || {}) %>;
        const vendorSkus = <%- JSON.stringify(vendorSkus || {}) %>;
        const reportMetadata = <%- JSON.stringify(reportMetadata || {}) %>;
        const startDate = '<%= startDate %>';
        const endDate = '<%= endDate %>';

        function applyDateFilter() {
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            window.location.href = `/vendor-analytics?startDate=${startDate}&endDate=${endDate}`;
        }

        // Checkbox functions
        function toggleSelectAll() {
            const selectAll = document.getElementById('selectAll');
            const checkboxes = document.querySelectorAll('.asin-checkbox');
            checkboxes.forEach(cb => {
                cb.checked = selectAll.checked;
            });
            updateSyncSelectedButton();
        }

        function updateSelectAllState() {
            const checkboxes = document.querySelectorAll('.asin-checkbox');
            const selectAll = document.getElementById('selectAll');
            const checkedCount = document.querySelectorAll('.asin-checkbox:checked').length;
            selectAll.checked = checkedCount === checkboxes.length && checkboxes.length > 0;
            selectAll.indeterminate = checkedCount > 0 && checkedCount < checkboxes.length;
            updateSyncSelectedButton();
        }

        function updateSyncSelectedButton() {
            const checkedCount = document.querySelectorAll('.asin-checkbox:checked').length;
            const btn = document.getElementById('syncSelectedBtn');
            btn.disabled = checkedCount === 0;
            btn.textContent = checkedCount > 0 ? `Sync Selected (${checkedCount})` : 'Sync Selected';
        }

        async function syncSelectedAsins() {
            const checkedBoxes = document.querySelectorAll('.asin-checkbox:checked');
            if (checkedBoxes.length === 0) {
                alert('Please select at least one ASIN');
                return;
            }

            const asins = Array.from(checkedBoxes).map(cb => cb.value);
            if (!confirm(`Sync reports for ${asins.length} selected ASIN${asins.length > 1 ? 's' : ''}?\n\nNote: Amazon reports include all ASINs, but this will refresh all data.`)) {
                return;
            }

            // Use the same sync modal as refreshAllReports
            refreshAllReports();
        }

        // Column visibility toggle
        function toggleColumn(colName) {
            const cells = document.querySelectorAll(`.col-${colName}`);
            const checkbox = document.querySelector(`.col-toggle[data-col="${colName}"]`);
            const isVisible = checkbox.checked;

            cells.forEach(cell => {
                cell.style.display = isVisible ? '' : 'none';
            });

            // Save preference to localStorage
            const prefs = JSON.parse(localStorage.getItem('vendorAnalyticsColumns') || '{}');
            prefs[colName] = isVisible;
            localStorage.setItem('vendorAnalyticsColumns', JSON.stringify(prefs));
        }

        // Restore column visibility from localStorage on page load
        function restoreColumnVisibility() {
            const prefs = JSON.parse(localStorage.getItem('vendorAnalyticsColumns') || '{}');
            Object.keys(prefs).forEach(colName => {
                const checkbox = document.querySelector(`.col-toggle[data-col="${colName}"]`);
                if (checkbox) {
                    checkbox.checked = prefs[colName];
                    toggleColumn(colName);
                }
            });
        }

        // Initialize column visibility on page load
        restoreColumnVisibility();

        async function backfillDailyData() {
            if (!confirm('This will fetch real-time daily data for the past 30 days.\n\nThis may take a few minutes. Continue?')) {
                return;
            }

            const btn = document.getElementById('backfillBtn');
            const statusDiv = document.getElementById('syncStatus');

            btn.disabled = true;
            btn.textContent = 'Backfilling...';
            statusDiv.innerHTML = '<span class="text-orange-600">Fetching daily data (this may take a few minutes)...</span>';

            try {
                const response = await fetch('/api/vendor-reports/backfill-daily', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ daysBack: 30 })
                });

                const data = await response.json();

                if (data.success) {
                    const sales = data.results.salesReport;
                    const inv = data.results.inventoryReport;
                    statusDiv.innerHTML = `<span class="text-green-600">Backfill complete! Sales: ${sales.success} chunks, Inventory: ${inv.success} chunks</span>`;

                    if (sales.errors.length > 0 || inv.errors.length > 0) {
                        console.log('Backfill errors:', data.results);
                    }

                    // Reload page after 2 seconds to show new data
                    setTimeout(() => window.location.reload(), 2000);
                } else {
                    statusDiv.innerHTML = `<span class="text-red-600">Backfill failed: ${data.error}</span>`;
                }
            } catch (err) {
                statusDiv.innerHTML = `<span class="text-red-600">Backfill error: ${err.message}</span>`;
            } finally {
                btn.disabled = false;
                btn.textContent = 'Backfill Daily Data';
            }
        }

        function closeSyncModal() {
            document.getElementById('syncModal').classList.add('hidden');
            document.getElementById('syncModal').classList.remove('flex');
            // Refresh page to show new data
            window.location.reload();
        }

        async function refreshAllReports() {
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;

            // Show modal
            document.getElementById('syncModal').classList.remove('hidden');
            document.getElementById('syncModal').classList.add('flex');
            document.getElementById('closeSyncBtn').classList.add('hidden');

            const progressDiv = document.getElementById('syncProgress');
            progressDiv.innerHTML = '';

            let hasErrors = false;

            for (const reportType of reportTypeKeys) {
                const itemId = `sync-${reportType}`;
                progressDiv.innerHTML += `
                    <div id="${itemId}" class="flex items-center gap-3 p-3 bg-slate-100 rounded-lg">
                        <div class="loading-spinner"></div>
                        <div>
                            <div class="font-medium text-slate-800">${reportTypes[reportType].name}</div>
                            <div class="text-xs text-slate-500">Creating report request...</div>
                        </div>
                    </div>
                `;

                try {
                    // Step 1: Create report request
                    const createResp = await fetch('/api/vendor-reports/create', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            reportType,
                            startDate,
                            endDate
                        })
                    });

                    const createData = await createResp.json();

                    if (!createData.success) {
                        throw new Error(createData.error || 'Failed to create report');
                    }

                    const reportId = createData.reportId;
                    updateSyncItem(itemId, 'loading', `Report ID: ${reportId} - Checking status...`);

                    // Step 2: Poll for status (max 30 attempts, 2 second intervals)
                    let reportDocumentId = null;
                    for (let i = 0; i < 30; i++) {
                        await sleep(2000);

                        const statusResp = await fetch(`/api/vendor-reports/status/${reportId}`);
                        const statusData = await statusResp.json();

                        if (statusData.status === 'DONE') {
                            reportDocumentId = statusData.reportDocumentId;
                            updateSyncItem(itemId, 'loading', 'Report ready - Downloading...');
                            break;
                        } else if (statusData.status === 'CANCELLED' || statusData.status === 'FATAL') {
                            throw new Error(`Report ${statusData.status}`);
                        }

                        updateSyncItem(itemId, 'loading', `Status: ${statusData.status} (attempt ${i + 1}/30)`);
                    }

                    if (!reportDocumentId) {
                        throw new Error('Report timed out');
                    }

                    // Step 3: Download and save report
                    const downloadResp = await fetch(
                        `/api/vendor-reports/download/${reportDocumentId}?reportType=${reportType}&saveToDb=true`
                    );
                    const downloadData = await downloadResp.json();

                    if (!downloadData.success) {
                        throw new Error('Failed to download report');
                    }

                    updateSyncItem(itemId, 'success', 'Synced successfully');

                } catch (err) {
                    hasErrors = true;
                    updateSyncItem(itemId, 'error', err.message);
                }
            }

            // Show close button
            document.getElementById('closeSyncBtn').classList.remove('hidden');
        }

        function updateSyncItem(itemId, status, message) {
            const item = document.getElementById(itemId);
            if (!item) return;

            const statusDiv = item.querySelector('div:first-child');
            const messageDiv = item.querySelector('.text-xs');

            if (status === 'success') {
                statusDiv.innerHTML = '<span class="text-2xl">OK</span>';
                statusDiv.className = 'text-green-600 font-bold';
                item.className = 'flex items-center gap-3 p-3 bg-green-50 rounded-lg border border-green-200';
            } else if (status === 'error') {
                statusDiv.innerHTML = '<span class="text-2xl">X</span>';
                statusDiv.className = 'text-red-600 font-bold';
                item.className = 'flex items-center gap-3 p-3 bg-red-50 rounded-lg border border-red-200';
            }

            if (messageDiv) {
                messageDiv.textContent = message;
            }
        }

        function sleep(ms) {
            return new Promise(resolve => setTimeout(resolve, ms));
        }

        // ASIN Detail Modal Functions
        function showAsinDetail(asin) {
            document.getElementById('detailAsin').textContent = asin;
            document.getElementById('detailCatalogLink').href = `/catalog/${asin}`;

            // Product Status
            const tracker = asinTrackerData[asin] || {};
            let statusHtml = '';
            if (tracker.availability) {
                let badgeClass = 'status-nodata';
                if (tracker.availability === 'In Stock') badgeClass = 'status-instock';
                else if (tracker.availability === 'Back Order') badgeClass = 'status-backorder';
                else if (tracker.availability === 'Unavailable') badgeClass = 'status-unavailable';

                const lastOrdered = lastOrderedByAsin[asin];
                const lastOrderedStr = lastOrdered ? new Date(lastOrdered).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) : null;

                statusHtml = `<div class="flex flex-wrap items-center gap-4">
                    <div><span class="status-badge ${badgeClass}">${tracker.availability}</span></div>
                    ${tracker.price && tracker.price !== 'N/A' ? `<div class="text-xl font-bold text-slate-700">${tracker.price}</div>` : ''}
                    ${lastOrderedStr ? `<div class="text-sm"><span class="text-slate-500">Last Ordered:</span> <span class="font-medium">${lastOrderedStr}</span></div>` : ''}
                </div>
                ${tracker.header ? `<div class="text-sm text-slate-500 mt-2">${tracker.header}</div>` : ''}`;
            } else {
                statusHtml = '<span class="text-slate-400">No tracker data available</span>';
            }
            document.getElementById('detailStatus').innerHTML = statusHtml;

            // RT Inventory
            const rtInv = dataByAsin[asin]?.['GET_VENDOR_REAL_TIME_INVENTORY_REPORT'];
            document.getElementById('detailRtInv').innerHTML = rtInv
                ? formatMetric('Highly Available Inventory', rtInv.highlyAvailableInventory !== undefined
                    ? (rtInv.highlyAvailableInventory ? '<span class="text-green-600 font-bold">Yes</span>' : '<span class="text-red-600 font-bold">No</span>')
                    : '-')
                : noDataHtml();

            // RT Sales
            const rtSales = dataByAsin[asin]?.['GET_VENDOR_REAL_TIME_SALES_REPORT'];
            document.getElementById('detailRtSales').innerHTML = rtSales
                ? `<div class="grid grid-cols-2 gap-4">
                    ${formatMetric('Ordered Units', rtSales.orderedUnits ?? '-')}
                    ${formatMetric('Ordered Revenue', rtSales.orderedRevenue?.amount ? '$' + parseFloat(rtSales.orderedRevenue.amount).toFixed(2) : '-')}
                   </div>`
                : noDataHtml();

            // Sales
            const sales = dataByAsin[asin]?.['GET_VENDOR_SALES_REPORT'];
            document.getElementById('detailSales').innerHTML = sales
                ? `<div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                    ${formatMetric('Shipped Units', sales.shippedUnits ?? '-')}
                    ${formatMetric('Shipped Revenue', sales.shippedRevenue?.amount ? '$' + parseFloat(sales.shippedRevenue.amount).toFixed(2) : '-')}
                    ${formatMetric('Shipped COGS', sales.shippedCogs?.amount ? '$' + parseFloat(sales.shippedCogs.amount).toFixed(2) : '-')}
                    ${formatMetric('Ordered Units', sales.orderedUnits ?? '-')}
                    ${formatMetric('Ordered Revenue', sales.orderedRevenue?.amount ? '$' + parseFloat(sales.orderedRevenue.amount).toFixed(2) : '-')}
                   </div>`
                : noDataHtml();

            // Traffic
            const traffic = dataByAsin[asin]?.['GET_VENDOR_TRAFFIC_REPORT'];
            document.getElementById('detailTraffic').innerHTML = traffic
                ? formatMetric('Glance Views', traffic.glanceViews?.toLocaleString() ?? '-')
                : noDataHtml();

            // Margin
            const margin = dataByAsin[asin]?.['GET_VENDOR_NET_PURE_PRODUCT_MARGIN_REPORT'];
            document.getElementById('detailMargin').innerHTML = margin
                ? formatMetric('Net Pure Product Margin', margin.netPureProductMargin !== undefined
                    ? `<span class="${margin.netPureProductMargin >= 0 ? 'text-green-600' : 'text-red-600'} font-bold">${(margin.netPureProductMargin * 100).toFixed(2)}%</span>`
                    : '-')
                : noDataHtml();

            // Inventory
            const inventory = dataByAsin[asin]?.['GET_VENDOR_INVENTORY_REPORT'];
            document.getElementById('detailInventory').innerHTML = inventory
                ? `<div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                    ${formatMetric('Sellable On Hand Units', inventory.sellableOnHandInventoryUnits ?? '-')}
                    ${formatMetric('Sellable On Hand Cost', inventory.sellableOnHandInventoryCost?.amount ? '$' + parseFloat(inventory.sellableOnHandInventoryCost.amount).toFixed(2) : '-')}
                    ${formatMetric('Unsellable On Hand Units', inventory.unsellableOnHandInventoryUnits ?? '-')}
                   </div>`
                : noDataHtml();

            // Show modal
            document.getElementById('asinDetailModal').classList.remove('hidden');
            document.getElementById('asinDetailModal').classList.add('flex');
        }

        function closeAsinDetail() {
            document.getElementById('asinDetailModal').classList.add('hidden');
            document.getElementById('asinDetailModal').classList.remove('flex');
        }

        function formatMetric(label, value) {
            return `<div class="metric-item">
                <div class="metric-label">${label}</div>
                <div class="metric-value text-lg">${value}</div>
            </div>`;
        }

        function noDataHtml() {
            return '<span class="text-slate-400">No data available for this period</span>';
        }

        // Chart functionality
        let chart = null;
        const chartColors = ['#3b82f6', '#10b981', '#f59e0b', '#ef4444', '#8b5cf6', '#ec4899', '#06b6d4', '#84cc16'];

        async function updateChart() {
            const selectedAsins = getSelectedChartAsins();

            // If no ASINs selected, destroy chart and show placeholder
            if (selectedAsins.length === 0) {
                if (chart) {
                    chart.destroy();
                    chart = null;
                }
                document.getElementById('chartPlaceholder').classList.remove('hidden');
                return;
            }

            document.getElementById('chartPlaceholder').classList.add('hidden');

            const metric = document.getElementById('chartMetric').value;
            const mergeAsins = document.getElementById('mergeAsins').checked;

            try {
                const response = await fetch(`/api/vendor-analytics/chart-data?asins=${selectedAsins.join(',')}&metric=${metric}&startDate=${startDate}&endDate=${endDate}&merge=${mergeAsins}`);
                const data = await response.json();

                if (!data.success) {
                    console.error('Chart data error:', data.error);
                    return;
                }

                if (chart) chart.destroy();

                const ctx = document.getElementById('analyticsChart').getContext('2d');
                chart = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: data.dates,
                        datasets: data.series.map((s, i) => ({
                            label: s.label,
                            data: s.values,
                            borderColor: chartColors[i % chartColors.length],
                            backgroundColor: chartColors[i % chartColors.length] + '20',
                            tension: 0.3,
                            fill: true,
                            spanGaps: true  // Connect lines across null values
                        }))
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        interaction: {
                            mode: 'index',
                            intersect: false
                        },
                        plugins: {
                            legend: { position: 'bottom' },
                            tooltip: {
                                callbacks: {
                                    label: (ctx) => {
                                        let value = ctx.raw;
                                        if (metric.includes('Revenue')) value = '$' + value.toFixed(2);
                                        else if (metric.includes('Margin')) value = (value * 100).toFixed(1) + '%';
                                        else value = value.toLocaleString();
                                        return ctx.dataset.label + ': ' + value;
                                    }
                                }
                            },
                            zoom: {
                                zoom: {
                                    wheel: { enabled: true },
                                    pinch: { enabled: true },
                                    drag: {
                                        enabled: true,
                                        backgroundColor: 'rgba(59, 130, 246, 0.1)',
                                        borderColor: '#3b82f6',
                                        borderWidth: 1
                                    },
                                    mode: 'x'
                                },
                                pan: {
                                    enabled: true,
                                    mode: 'x'
                                }
                            }
                        },
                        scales: {
                            x: {
                                type: 'category',
                                title: { display: true, text: 'Date' }
                            },
                            y: {
                                beginAtZero: !metric.includes('Margin'),
                                title: { display: true, text: metric }
                            }
                        }
                    }
                });
            } catch (err) {
                console.error('Chart update error:', err);
            }
        }

        function getSelectedChartAsins() {
            // Use chart ASIN selector as the source of truth (they're synced with table)
            const chartChecked = document.querySelectorAll('.chart-asin-checkbox:checked');
            return Array.from(chartChecked).map(cb => cb.value);
        }

        // Sync table checkboxes with chart ASIN selector (bidirectional)
        document.querySelectorAll('.asin-checkbox').forEach(cb => {
            cb.addEventListener('change', () => {
                const chartCb = document.querySelector(`.chart-asin-checkbox[value="${cb.value}"]`);
                if (chartCb) chartCb.checked = cb.checked;
                updateChart(); // Auto-update chart when selection changes
            });
        });

        // Sync chart ASIN selector with table checkboxes
        document.querySelectorAll('.chart-asin-checkbox').forEach(cb => {
            cb.addEventListener('change', () => {
                const tableCb = document.querySelector(`.asin-checkbox[value="${cb.value}"]`);
                if (tableCb) tableCb.checked = cb.checked;
                updateSelectAllState();
                updateChart(); // Auto-update chart when selection changes
            });
        });

        // Initialize: Select all ASINs by default and load chart
        function initializeChart() {
            // Select all checkboxes in both table and chart selector
            document.querySelectorAll('.asin-checkbox').forEach(cb => cb.checked = true);
            document.querySelectorAll('.chart-asin-checkbox').forEach(cb => cb.checked = true);
            document.getElementById('selectAll').checked = true;
            updateSyncSelectedButton();

            // Load chart with all ASINs selected
            updateChart();
        }

        // Run initialization when page loads
        document.addEventListener('DOMContentLoaded', initializeChart);

        // ASIN POs Modal
        async function showAsinPOs(asin) {
            document.getElementById('poAsin').textContent = asin;
            document.getElementById('asinPOsContent').innerHTML = '<div class="text-center py-8 text-slate-500">Loading...</div>';
            document.getElementById('asinPOsModal').classList.remove('hidden');
            document.getElementById('asinPOsModal').classList.add('flex');

            try {
                const response = await fetch(`/api/purchase-orders/by-asin/${asin}`);
                const data = await response.json();

                if (!data.success || !data.purchaseOrders.length) {
                    document.getElementById('asinPOsContent').innerHTML = '<div class="text-center py-8 text-slate-500">No purchase orders found for this ASIN</div>';
                    return;
                }

                const rows = data.purchaseOrders.map(po => `
                    <tr class="hover:bg-slate-50">
                        <td class="px-3 py-2 font-mono font-bold text-blue-600">
                            <a href="/purchase-orders" class="hover:underline">${po.po_number}</a>
                        </td>
                        <td class="px-3 py-2">${new Date(po.po_date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</td>
                        <td class="px-3 py-2">
                            <span class="px-2 py-1 rounded text-xs font-medium ${
                                po.po_status === 'Shipped' || po.po_status === 'Closed' ? 'bg-green-100 text-green-700' :
                                po.po_status === 'Acknowledged' ? 'bg-amber-100 text-amber-700' :
                                po.po_status === 'Cancelled' ? 'bg-red-100 text-red-700' :
                                'bg-blue-100 text-blue-700'
                            }">${po.po_status}</span>
                        </td>
                        <td class="px-3 py-2 text-right">${po.ordered_quantity || '-'}</td>
                        <td class="px-3 py-2 text-right">${po.acknowledged_quantity || '-'}</td>
                        <td class="px-3 py-2 text-right">${po.net_cost_amount ? '$' + parseFloat(po.net_cost_amount).toFixed(2) : '-'}</td>
                        <td class="px-3 py-2 text-xs text-slate-500">${po.vendor_sku || '-'}</td>
                    </tr>
                `).join('');

                document.getElementById('asinPOsContent').innerHTML = `
                    <div class="overflow-x-auto">
                        <table class="w-full text-sm border border-slate-200 rounded-lg">
                            <thead class="bg-slate-100">
                                <tr>
                                    <th class="px-3 py-2 text-left">PO Number</th>
                                    <th class="px-3 py-2 text-left">PO Date</th>
                                    <th class="px-3 py-2 text-left">Status</th>
                                    <th class="px-3 py-2 text-right">Ordered</th>
                                    <th class="px-3 py-2 text-right">Accepted</th>
                                    <th class="px-3 py-2 text-right">Unit Cost</th>
                                    <th class="px-3 py-2 text-left">Vendor SKU</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-slate-200">
                                ${rows}
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-4 text-sm text-slate-500">
                        Total: ${data.purchaseOrders.length} purchase order${data.purchaseOrders.length !== 1 ? 's' : ''}
                    </div>
                `;
            } catch (err) {
                document.getElementById('asinPOsContent').innerHTML = '<div class="text-center py-8 text-red-500">Error loading purchase orders</div>';
            }
        }

        function closeAsinPOsModal() {
            document.getElementById('asinPOsModal').classList.add('hidden');
            document.getElementById('asinPOsModal').classList.remove('flex');
        }

        // ===== INLINE CHART FUNCTIONS =====
        const inlineCharts = {}; // Store chart instances by ASIN
        const inlineChartData = {}; // Store chart data by ASIN

        function toggleInlineChart(asin) {
            const chartRow = document.getElementById(`chart-row-${asin}`);
            const btn = document.querySelector(`.chart-toggle-btn[data-asin="${asin}"]`);

            if (chartRow.classList.contains('hidden')) {
                chartRow.classList.remove('hidden');
                btn.classList.add('bg-purple-600', 'text-white');
                btn.classList.remove('bg-purple-100', 'text-purple-700');
                loadInlineChart(asin);
            } else {
                chartRow.classList.add('hidden');
                btn.classList.remove('bg-purple-600', 'text-white');
                btn.classList.add('bg-purple-100', 'text-purple-700');
            }
        }

        async function loadInlineChart(asin, period = '30d') {
            const loadingEl = document.getElementById(`inline-chart-loading-${asin}`);
            loadingEl.classList.remove('hidden');

            // Calculate date range based on period
            const endDate = new Date();
            let startDate = new Date();

            switch(period) {
                case '7d': startDate.setDate(endDate.getDate() - 7); break;
                case '30d': startDate.setDate(endDate.getDate() - 30); break;
                case '90d': startDate.setDate(endDate.getDate() - 90); break;
                case '365d': startDate.setDate(endDate.getDate() - 365); break;
                case 'all': startDate = new Date('2020-01-01'); break;
                default: startDate.setDate(endDate.getDate() - 30);
            }

            const startStr = startDate.toISOString().split('T')[0];
            const endStr = endDate.toISOString().split('T')[0];

            // Get selected metrics
            const metricCheckboxes = document.querySelectorAll(`.inline-metric-cb[data-asin="${asin}"]:checked`);
            const metrics = Array.from(metricCheckboxes).map(cb => cb.value);

            if (metrics.length === 0) {
                loadingEl.innerHTML = '<div class="text-slate-500">Select at least one metric</div>';
                return;
            }

            try {
                const response = await fetch(`/api/vendor-analytics/chart-data?asins=${asin}&startDate=${startStr}&endDate=${endStr}&multiMetric=true`);
                const data = await response.json();

                if (!data.success) {
                    loadingEl.innerHTML = '<div class="text-red-500">Error loading data</div>';
                    return;
                }

                inlineChartData[asin] = data;
                renderInlineChart(asin, metrics);
                loadingEl.classList.add('hidden');

            } catch (err) {
                console.error('Error loading inline chart:', err);
                loadingEl.innerHTML = '<div class="text-red-500">Error loading data</div>';
            }
        }

        function renderInlineChart(asin, metrics) {
            const data = inlineChartData[asin];
            if (!data) return;

            const ctx = document.getElementById(`inline-chart-${asin}`).getContext('2d');

            // Destroy existing chart
            if (inlineCharts[asin]) {
                inlineCharts[asin].destroy();
            }

            const metricColors = {
                orderedUnits: '#3b82f6',
                orderedRevenue: '#10b981',
                glanceViews: '#f59e0b',
                sellableOnHandInventoryUnits: '#8b5cf6'
            };

            const metricLabels = {
                orderedUnits: 'Ordered Units',
                orderedRevenue: 'Revenue ($)',
                glanceViews: 'Glance Views',
                sellableOnHandInventoryUnits: 'Inventory Units'
            };

            // Build datasets from selected metrics
            const datasets = [];
            let hasRevenue = false;

            metrics.forEach(metric => {
                if (data.metricData && data.metricData[metric]) {
                    const isRevenue = metric === 'orderedRevenue';
                    if (isRevenue) hasRevenue = true;

                    datasets.push({
                        label: metricLabels[metric] || metric,
                        data: data.metricData[metric],
                        borderColor: metricColors[metric] || '#6b7280',
                        backgroundColor: (metricColors[metric] || '#6b7280') + '20',
                        tension: 0.3,
                        fill: false,
                        yAxisID: isRevenue ? 'y1' : 'y',
                        spanGaps: true  // Connect lines across null values
                    });
                }
            });

            // Create chart with zoom plugin
            inlineCharts[asin] = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: data.dates,
                    datasets: datasets
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    interaction: {
                        mode: 'index',
                        intersect: false
                    },
                    plugins: {
                        legend: { position: 'bottom' },
                        zoom: {
                            zoom: {
                                wheel: { enabled: true },
                                pinch: { enabled: true },
                                drag: {
                                    enabled: true,
                                    backgroundColor: 'rgba(59, 130, 246, 0.1)',
                                    borderColor: '#3b82f6',
                                    borderWidth: 1
                                },
                                mode: 'x'
                            },
                            pan: {
                                enabled: true,
                                mode: 'x'
                            }
                        }
                    },
                    scales: {
                        x: {
                            type: 'category',
                            title: { display: true, text: 'Date' }
                        },
                        y: {
                            type: 'linear',
                            display: true,
                            position: 'left',
                            beginAtZero: true,
                            title: { display: true, text: 'Units / Views' }
                        },
                        y1: hasRevenue ? {
                            type: 'linear',
                            display: true,
                            position: 'right',
                            beginAtZero: true,
                            title: { display: true, text: 'Revenue ($)' },
                            grid: { drawOnChartArea: false }
                        } : undefined
                    }
                }
            });
        }

        function resetInlineChartZoom(asin) {
            if (inlineCharts[asin]) {
                inlineCharts[asin].resetZoom();
            }
        }

        // Event handlers for inline chart period buttons
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('inline-period-btn')) {
                const asin = e.target.dataset.asin;
                const period = e.target.dataset.period;

                // Update active button styling
                document.querySelectorAll(`.inline-period-btn[data-asin="${asin}"]`).forEach(btn => {
                    btn.classList.remove('bg-blue-600', 'text-white');
                    btn.classList.add('bg-slate-200', 'text-slate-600');
                });
                e.target.classList.remove('bg-slate-200', 'text-slate-600');
                e.target.classList.add('bg-blue-600', 'text-white');

                loadInlineChart(asin, period);
            }
        });

        // Event handlers for inline chart metric checkboxes
        document.querySelectorAll('.inline-metric-cb').forEach(cb => {
            cb.addEventListener('change', function() {
                const asin = this.dataset.asin;
                const metricCheckboxes = document.querySelectorAll(`.inline-metric-cb[data-asin="${asin}"]:checked`);
                const metrics = Array.from(metricCheckboxes).map(cb => cb.value);

                if (inlineChartData[asin]) {
                    renderInlineChart(asin, metrics);
                }
            });
        });

        // ===== COMBINED CHART MODAL FUNCTIONS =====
        let combinedChart = null;

        function openCombinedChartModal() {
            document.getElementById('combinedChartModal').classList.remove('hidden');
            document.getElementById('combinedChartModal').classList.add('flex');
            updateChart(); // Load chart data
        }

        function closeCombinedChartModal() {
            document.getElementById('combinedChartModal').classList.add('hidden');
            document.getElementById('combinedChartModal').classList.remove('flex');
        }

        function resetCombinedChartZoom() {
            if (chart) {
                chart.resetZoom();
            }
        }

        // Close modal when clicking outside
        document.getElementById('combinedChartModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeCombinedChartModal();
            }
        });

    </script>
