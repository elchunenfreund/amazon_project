<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Purchase Orders - Amazon Tracker</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body { font-family: 'Inter', sans-serif; }
        .status-badge {
            display: inline-block;
            padding: 4px 10px;
            border-radius: 9999px;
            font-size: 0.7rem;
            font-weight: 700;
            text-transform: uppercase;
        }
        .status-new { background: #dbeafe; color: #1e40af; }
        .status-acknowledged { background: #fef3c7; color: #92400e; }
        .status-shipped { background: #d1fae5; color: #065f46; }
        .status-cancelled { background: #fee2e2; color: #991b1b; }
        .status-closed { background: #e5e7eb; color: #374151; }
        .loading-spinner {
            border: 3px solid #f3f3f3;
            border-top: 3px solid #3498db;
            border-radius: 50%;
            width: 24px;
            height: 24px;
            animation: spin 1s linear infinite;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        .table-container { overflow-x: auto; }
        thead th { position: sticky; top: 0; z-index: 10; }
    </style>
</head>
<body class="bg-slate-100 min-h-screen">
    <div class="max-w-full mx-auto px-4 md:px-8 py-8">
        <!-- Header -->
        <header class="mb-8">
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
                <div>
                    <h1 class="text-4xl font-black text-slate-900 tracking-tight">Purchase Orders</h1>
                    <p class="text-slate-500 font-medium">Vendor Central purchase orders from Amazon</p>
                </div>
                <div class="flex gap-3">
                    <a href="/" class="bg-slate-600 text-white px-6 py-3 rounded-xl font-bold shadow-lg hover:bg-slate-700 transition-all">Dashboard</a>
                    <a href="/vendor-analytics" class="bg-blue-600 text-white px-6 py-3 rounded-xl font-bold shadow-lg hover:bg-blue-700 transition-all">Vendor Analytics</a>
                </div>
            </div>
        </header>

        <!-- Date Filter & Sync Controls -->
        <div class="bg-white rounded-2xl shadow-lg p-6 mb-8 border border-slate-200">
            <div class="flex flex-wrap items-end gap-4">
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1">Start Date</label>
                    <input type="date" id="startDate" value="<%= startDate %>"
                           class="px-4 py-2 rounded-lg border border-slate-300 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 outline-none">
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1">End Date</label>
                    <input type="date" id="endDate" value="<%= endDate %>"
                           class="px-4 py-2 rounded-lg border border-slate-300 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 outline-none">
                </div>
                <button onclick="applyDateFilter()" class="bg-blue-600 text-white px-6 py-2 rounded-lg font-bold hover:bg-blue-700 transition-all">
                    Apply Filter
                </button>
                <div class="border-l border-slate-300 h-8 mx-2"></div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1">Sync from API (Created After)</label>
                    <input type="date" id="createdAfter"
                           class="px-4 py-2 rounded-lg border border-slate-300 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 outline-none">
                </div>
                <button onclick="syncPurchaseOrders()" id="syncBtn" class="bg-purple-600 text-white px-6 py-2 rounded-lg font-bold hover:bg-purple-700 transition-all flex items-center gap-2">
                    <span id="syncBtnText">Sync POs</span>
                    <div id="syncSpinner" class="loading-spinner hidden"></div>
                </button>
                <button onclick="syncReceivingStatus()" id="syncStatusBtn" class="bg-green-600 text-white px-6 py-2 rounded-lg font-bold hover:bg-green-700 transition-all flex items-center gap-2">
                    <span id="syncStatusBtnText">Sync Receiving</span>
                    <div id="syncStatusSpinner" class="loading-spinner hidden"></div>
                </button>
                <div id="syncStatus" class="text-sm text-slate-500 ml-4"></div>
            </div>
            <div class="mt-3 text-sm text-slate-500">
                Showing <%= purchaseOrders.length %> purchase orders from <%= startDate %> to <%= endDate %>
            </div>
        </div>

        <!-- Summary Cards -->
        <div class="grid grid-cols-2 md:grid-cols-5 gap-4 mb-8">
            <div class="bg-white rounded-xl shadow-lg p-4 border border-slate-200">
                <div class="text-2xl font-black text-slate-900" id="totalPOs"><%= purchaseOrders.length %></div>
                <div class="text-xs text-slate-500 font-medium">Total POs</div>
            </div>
            <div class="bg-blue-50 rounded-xl shadow-lg p-4 border border-blue-200">
                <div class="text-2xl font-black text-blue-700" id="newPOs"><%= purchaseOrders.filter(p => p.po_status === 'New').length %></div>
                <div class="text-xs text-blue-600 font-medium">New</div>
            </div>
            <div class="bg-amber-50 rounded-xl shadow-lg p-4 border border-amber-200">
                <div class="text-2xl font-black text-amber-700" id="acknowledgedPOs"><%= purchaseOrders.filter(p => p.po_status === 'Acknowledged').length %></div>
                <div class="text-xs text-amber-600 font-medium">Acknowledged</div>
            </div>
            <div class="bg-emerald-50 rounded-xl shadow-lg p-4 border border-emerald-200">
                <div class="text-2xl font-black text-emerald-700" id="shippedPOs"><%= purchaseOrders.filter(p => ['Shipped', 'Closed'].includes(p.po_status)).length %></div>
                <div class="text-xs text-emerald-600 font-medium">Shipped/Closed</div>
            </div>
            <div class="bg-red-50 rounded-xl shadow-lg p-4 border border-red-200">
                <div class="text-2xl font-black text-red-700" id="cancelledPOs"><%= purchaseOrders.filter(p => p.po_status === 'Cancelled').length %></div>
                <div class="text-xs text-red-600 font-medium">Cancelled</div>
            </div>
        </div>

        <!-- Purchase Orders Table -->
        <div class="bg-white rounded-2xl shadow-xl border border-slate-200 overflow-hidden">
            <div class="table-container max-h-[65vh] overflow-auto">
                <table class="w-full text-sm">
                    <thead class="bg-slate-900 text-white">
                        <tr>
                            <th class="px-4 py-3 text-left font-bold">PO Number</th>
                            <th class="px-4 py-3 text-left font-bold">Date</th>
                            <th class="px-4 py-3 text-center font-bold">Status</th>
                            <th class="px-4 py-3 text-left font-bold">Delivery Window</th>
                            <th class="px-4 py-3 text-center font-bold">Items</th>
                            <th class="px-4 py-3 text-left font-bold">Ship To</th>
                            <th class="px-4 py-3 text-center font-bold">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-200">
                        <% if (purchaseOrders.length === 0) { %>
                        <tr>
                            <td colspan="7" class="px-4 py-12 text-center text-slate-500">
                                <p class="text-4xl mb-4">No Purchase Orders</p>
                                <p class="font-medium">No purchase orders synced yet</p>
                                <p class="text-sm">Click "Sync from SP-API" to fetch your vendor purchase orders</p>
                            </td>
                        </tr>
                        <% } else { %>
                        <% purchaseOrders.forEach(po => { %>
                        <tr id="po-row-<%= po.po_number %>" class="hover:bg-slate-50 transition-all duration-300">
                            <td class="px-4 py-3">
                                <span class="font-mono font-bold text-slate-800"><%= po.po_number %></span>
                            </td>
                            <td class="px-4 py-3 text-slate-600">
                                <% if (po.po_date) { %>
                                <%= new Date(po.po_date).toLocaleDateString('en-CA') %>
                                <% } else { %>
                                -
                                <% } %>
                            </td>
                            <td class="px-4 py-3 text-center">
                                <% const statusClass = {
                                    'New': 'status-new',
                                    'Acknowledged': 'status-acknowledged',
                                    'Shipped': 'status-shipped',
                                    'Closed': 'status-closed',
                                    'Cancelled': 'status-cancelled'
                                }[po.po_status] || 'status-new'; %>
                                <span class="status-badge <%= statusClass %>"><%= po.po_status || 'Unknown' %></span>
                            </td>
                            <td class="px-4 py-3 text-xs text-slate-600">
                                <% if (po.delivery_window_start && po.delivery_window_end) { %>
                                <div><%= new Date(po.delivery_window_start).toLocaleDateString('en-CA') %></div>
                                <div class="text-slate-400">to <%= new Date(po.delivery_window_end).toLocaleDateString('en-CA') %></div>
                                <% } else { %>
                                -
                                <% } %>
                            </td>
                            <td class="px-4 py-3 text-center">
                                <% const items = typeof po.items === 'string' ? JSON.parse(po.items) : po.items; %>
                                <% if (items && Array.isArray(items)) { %>
                                <span class="font-bold text-slate-800"><%= items.length %></span>
                                <span class="text-slate-500 text-xs">items</span>
                                <% } else { %>
                                -
                                <% } %>
                            </td>
                            <td class="px-4 py-3 text-xs">
                                <% const shipTo = typeof po.ship_to_party === 'string' ? JSON.parse(po.ship_to_party) : po.ship_to_party; %>
                                <% if (shipTo?.address) { %>
                                <div class="text-slate-700"><%= shipTo.address.city || '' %></div>
                                <div class="text-slate-400"><%= shipTo.address.stateOrRegion || '' %>, <%= shipTo.address.countryCode || '' %></div>
                                <% } else if (shipTo?.partyId) { %>
                                <div class="text-slate-700 font-medium"><%= shipTo.partyId %></div>
                                <div class="text-slate-400 text-[10px]">Amazon FC</div>
                                <% } else { %>
                                -
                                <% } %>
                            </td>
                            <td class="px-4 py-3 text-center">
                                <button onclick="showPODetails('<%= po.po_number %>')" class="text-purple-600 hover:text-purple-800 text-xs font-medium">
                                    View Details
                                </button>
                            </td>
                        </tr>
                        <% }); %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- PO Details Modal -->
        <div id="poModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
            <div class="bg-white rounded-2xl p-8 max-w-4xl w-full mx-4 shadow-2xl max-h-[90vh] overflow-auto">
                <div class="flex justify-between items-center mb-6">
                    <h3 class="text-xl font-bold text-slate-900">Purchase Order Details</h3>
                    <button onclick="closePOModal()" class="text-slate-400 hover:text-slate-600 text-2xl">&times;</button>
                </div>
                <div id="poModalContent">
                    <!-- Content will be inserted here -->
                </div>
            </div>
        </div>
    </div>

    <script>
        const purchaseOrders = <%- JSON.stringify(purchaseOrders) %>;
        const productTitles = <%- JSON.stringify(productTitles || {}) %>;
        const vendorSkus = <%- JSON.stringify(vendorSkus || {}) %>;
        const inventoryByAsin = <%- JSON.stringify(inventoryByAsin || {}) %>;
        const receivingData = <%- JSON.stringify(receivingData || {}) %>;

        // Set default sync date (last 30 days)
        document.getElementById('createdAfter').value = new Date(Date.now() - 30 * 24 * 60 * 60 * 1000).toISOString().split('T')[0];

        function applyDateFilter() {
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            window.location.href = `/purchase-orders?startDate=${startDate}&endDate=${endDate}`;
        }

        async function syncPurchaseOrders() {
            const createdAfter = document.getElementById('createdAfter').value;
            const createdBefore = document.getElementById('endDate').value; // Use page end date

            const syncBtn = document.getElementById('syncBtn');
            const syncBtnText = document.getElementById('syncBtnText');
            const syncSpinner = document.getElementById('syncSpinner');
            const syncStatus = document.getElementById('syncStatus');

            syncBtn.disabled = true;
            syncBtnText.textContent = 'Syncing...';
            syncSpinner.classList.remove('hidden');
            syncStatus.textContent = '';

            try {
                const response = await fetch('/api/purchase-orders/sync', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        createdAfter: createdAfter ? createdAfter + 'T00:00:00Z' : undefined,
                        createdBefore: createdBefore ? createdBefore + 'T23:59:59Z' : undefined
                    })
                });

                const data = await response.json();

                if (data.success) {
                    let message = `Synced ${data.savedCount} orders`;
                    if (data.pagesFetched > 1) {
                        message += ` (${data.pagesFetched} pages)`;
                    }
                    if (data.hasMore) {
                        message += ' - more available, sync again';
                    }
                    syncStatus.textContent = message;
                    syncStatus.className = 'text-sm text-green-600 ml-4';

                    // Refresh page after short delay
                    setTimeout(() => window.location.reload(), 1500);
                } else {
                    syncStatus.textContent = 'Sync failed: ' + (data.error || 'Unknown error');
                    syncStatus.className = 'text-sm text-red-600 ml-4';
                }
            } catch (err) {
                syncStatus.textContent = 'Error: ' + err.message;
                syncStatus.className = 'text-sm text-red-600 ml-4';
            } finally {
                syncBtn.disabled = false;
                syncBtnText.textContent = 'Sync POs';
                syncSpinner.classList.add('hidden');
            }
        }

        async function syncReceivingStatus() {
            const syncBtn = document.getElementById('syncStatusBtn');
            const syncBtnText = document.getElementById('syncStatusBtnText');
            const syncSpinner = document.getElementById('syncStatusSpinner');
            const syncStatus = document.getElementById('syncStatus');

            syncBtn.disabled = true;
            syncBtnText.textContent = 'Syncing...';
            syncSpinner.classList.remove('hidden');
            syncStatus.textContent = 'Fetching receiving status from Amazon...';
            syncStatus.className = 'text-sm text-blue-600 ml-4';

            try {
                // Get last 60 days of updates
                const updatedAfter = new Date(Date.now() - 60 * 24 * 60 * 60 * 1000).toISOString();

                const response = await fetch('/api/purchase-orders/sync-status', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ updatedAfter })
                });

                const data = await response.json();

                if (data.success) {
                    let message = `Updated ${data.itemsUpdated} items from ${data.ordersProcessed} orders`;
                    if (data.pagesFetched > 1) {
                        message += ` (${data.pagesFetched} pages)`;
                    }
                    syncStatus.textContent = message;
                    syncStatus.className = 'text-sm text-green-600 ml-4';

                    // Refresh page after short delay
                    setTimeout(() => window.location.reload(), 1500);
                } else {
                    syncStatus.textContent = 'Sync failed: ' + (data.error || 'Unknown error');
                    syncStatus.className = 'text-sm text-red-600 ml-4';
                }
            } catch (err) {
                syncStatus.textContent = 'Error: ' + err.message;
                syncStatus.className = 'text-sm text-red-600 ml-4';
            } finally {
                syncBtn.disabled = false;
                syncBtnText.textContent = 'Sync Receiving';
                syncSpinner.classList.add('hidden');
            }
        }

        function formatPartyInfo(title, party) {
            if (!party) return `<div class="border border-slate-200 rounded-lg p-3 bg-slate-50"><div class="text-xs text-slate-500 font-bold mb-1">${title}</div><div class="text-slate-400 text-sm">Not specified</div></div>`;

            const addr = party.address || {};
            return `
                <div class="border border-slate-200 rounded-lg p-3">
                    <div class="text-xs text-slate-500 font-bold mb-2">${title}</div>
                    <div class="text-sm space-y-1">
                        ${party.partyId ? `<div><span class="text-slate-500">Party ID:</span> <span class="font-medium">${party.partyId}</span></div>` : ''}
                        ${addr.name ? `<div class="font-medium text-slate-800">${addr.name}</div>` : ''}
                        ${addr.addressLine1 ? `<div>${addr.addressLine1}</div>` : ''}
                        ${addr.addressLine2 ? `<div>${addr.addressLine2}</div>` : ''}
                        ${addr.addressLine3 ? `<div>${addr.addressLine3}</div>` : ''}
                        ${addr.city || addr.stateOrRegion || addr.postalCode ? `<div>${addr.city || ''}${addr.city && addr.stateOrRegion ? ', ' : ''}${addr.stateOrRegion || ''} ${addr.postalCode || ''}</div>` : ''}
                        ${addr.countryCode ? `<div>${addr.countryCode}</div>` : ''}
                        ${addr.phone ? `<div><span class="text-slate-500">Phone:</span> ${addr.phone}</div>` : ''}
                    </div>
                </div>
            `;
        }

        function showPODetails(poNumber) {
            const po = purchaseOrders.find(p => p.po_number === poNumber);
            if (!po) return;

            const rawData = typeof po.raw_data === 'string' ? JSON.parse(po.raw_data) : po.raw_data;
            const items = typeof po.items === 'string' ? JSON.parse(po.items) : po.items;

            // Calculate totals
            let totalOrdered = 0;
            let totalAccepted = 0;
            let totalReceived = 0;
            let totalValue = 0;
            let hasInventoryIssues = false;

            let itemsHtml = '';
            if (items && Array.isArray(items)) {
                const itemRows = items.map(item => {
                    const asin = item.amazonProductIdentifier || '-';
                    const title = productTitles[asin] || '';
                    // Prioritize user-entered SKU from products table over Amazon's vendorProductIdentifier
                    const sku = vendorSkus[asin] || item.vendorProductIdentifier || '-';
                    const ordered = parseInt(item.orderedQuantity?.amount) || 0;
                    const accepted = parseInt(item.acknowledgedQuantity?.amount) || 0;
                    const unitCost = item.netCost?.amount ? parseFloat(item.netCost.amount) : 0;
                    const lineTotal = ordered * unitCost;

                    // Get receiving data
                    const recKey = poNumber + '|' + asin;
                    const recData = receivingData[recKey];
                    const received = recData?.receivedQuantity || 0;

                    totalOrdered += ordered;
                    totalAccepted += accepted;
                    totalReceived += received;
                    totalValue += lineTotal;

                    // Get inventory info
                    const inv = inventoryByAsin[asin];
                    const currentInv = inv?.sellableUnits || 0;
                    const invStatus = !inv ? 'no-data' : (currentInv === 0 ? 'out' : (currentInv < ordered ? 'low' : 'ok'));
                    if (invStatus === 'out' || invStatus === 'low') hasInventoryIssues = true;

                    const invBadge = invStatus === 'no-data' ? '<span class="text-slate-400 text-xs">No data</span>' :
                                     invStatus === 'out' ? '<span class="bg-red-100 text-red-700 px-2 py-0.5 rounded text-xs font-medium">0 units</span>' :
                                     invStatus === 'low' ? '<span class="bg-amber-100 text-amber-700 px-2 py-0.5 rounded text-xs font-medium">' + currentInv + ' units</span>' :
                                     '<span class="bg-green-100 text-green-700 px-2 py-0.5 rounded text-xs font-medium">' + currentInv + ' units</span>';

                    // Received status badge
                    const recBadge = received === 0 ? '<span class="text-slate-400">-</span>' :
                                     received < ordered ? '<span class="text-amber-600 font-medium">' + received + '</span>' :
                                     '<span class="text-green-600 font-medium">' + received + '</span>';

                    return `
                        <tr class="${invStatus === 'out' ? 'bg-red-50' : ''}">
                            <td class="px-3 py-2">
                                <a href="/catalog/${asin}" class="font-mono font-bold text-blue-600 hover:underline">${asin}</a>
                                ${title ? '<div class="text-xs text-slate-500 max-w-[200px] truncate" title="' + title.replace(/"/g, '&quot;') + '">' + title + '</div>' : ''}
                            </td>
                            <td class="px-3 py-2 text-xs text-slate-600">${sku}</td>
                            <td class="px-3 py-2 text-right font-medium">${ordered}</td>
                            <td class="px-3 py-2 text-right font-medium ${accepted < ordered ? 'text-amber-600' : ''}">${accepted || '-'}</td>
                            <td class="px-3 py-2 text-right">${recBadge}</td>
                            <td class="px-3 py-2 text-center">${invBadge}</td>
                            <td class="px-3 py-2 text-right">${unitCost ? '$' + unitCost.toFixed(2) : '-'}</td>
                            <td class="px-3 py-2 text-right font-medium">${lineTotal ? '$' + lineTotal.toFixed(2) : '-'}</td>
                        </tr>
                    `;
                }).join('');

                itemsHtml = `
                    <h4 class="font-bold text-slate-800 mb-3">Line Items (${items.length})</h4>
                    <div class="overflow-x-auto">
                        <table class="w-full text-sm border border-slate-200 rounded-lg">
                            <thead class="bg-slate-100">
                                <tr>
                                    <th class="px-3 py-2 text-left">Product (ASIN / Title)</th>
                                    <th class="px-3 py-2 text-left">Vendor SKU</th>
                                    <th class="px-3 py-2 text-right">Ordered</th>
                                    <th class="px-3 py-2 text-right">Accepted</th>
                                    <th class="px-3 py-2 text-right">Received</th>
                                    <th class="px-3 py-2 text-center">Inventory</th>
                                    <th class="px-3 py-2 text-right">Unit Cost</th>
                                    <th class="px-3 py-2 text-right">Line Total</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-slate-200">
                                ${itemRows}
                            </tbody>
                            <tfoot class="bg-slate-50 font-bold">
                                <tr>
                                    <td class="px-3 py-2">Totals</td>
                                    <td class="px-3 py-2"></td>
                                    <td class="px-3 py-2 text-right">${totalOrdered}</td>
                                    <td class="px-3 py-2 text-right">${totalAccepted}</td>
                                    <td class="px-3 py-2 text-right">${totalReceived > 0 ? totalReceived : '-'}</td>
                                    <td class="px-3 py-2"></td>
                                    <td class="px-3 py-2"></td>
                                    <td class="px-3 py-2 text-right">$${totalValue.toFixed(2)}</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                `;
            }

            // Status badge color
            const statusColors = {
                'New': 'bg-blue-100 text-blue-800',
                'Acknowledged': 'bg-amber-100 text-amber-800',
                'Shipped': 'bg-green-100 text-green-800',
                'Closed': 'bg-slate-100 text-slate-800',
                'Cancelled': 'bg-red-100 text-red-800'
            };
            const statusClass = statusColors[po.po_status] || 'bg-slate-100 text-slate-800';

            document.getElementById('poModalContent').innerHTML = `
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
                    <div class="bg-slate-50 p-3 rounded-lg">
                        <div class="text-xs text-slate-500">PO Number</div>
                        <div class="font-mono font-bold text-lg">${po.po_number}</div>
                    </div>
                    <div class="bg-slate-50 p-3 rounded-lg">
                        <div class="text-xs text-slate-500">Status</div>
                        <span class="inline-block mt-1 px-3 py-1 rounded-full text-sm font-bold ${statusClass}">${po.po_status || 'Unknown'}</span>
                    </div>
                    <div class="bg-slate-50 p-3 rounded-lg">
                        <div class="text-xs text-slate-500">PO Date</div>
                        <div class="font-medium">${po.po_date ? new Date(po.po_date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) : '-'}</div>
                    </div>
                    <div class="bg-slate-50 p-3 rounded-lg">
                        <div class="text-xs text-slate-500">Total Value</div>
                        <div class="font-bold text-lg text-green-700">$${totalValue.toFixed(2)}</div>
                    </div>
                </div>

                ${hasInventoryIssues ? `
                <div class="bg-amber-50 border border-amber-200 rounded-lg p-4 mb-6">
                    <div class="flex items-center gap-2 text-amber-800">
                        <span class="text-xl">⚠️</span>
                        <span class="font-bold">Inventory Alert</span>
                    </div>
                    <p class="text-sm text-amber-700 mt-1">Some items in this PO have low or zero inventory. Check the inventory column for details.</p>
                </div>
                ` : ''}

                <div class="mb-6">
                    <div class="border border-slate-200 rounded-lg p-3 inline-block">
                        <div class="text-xs text-slate-500 mb-1">Delivery Window</div>
                        ${po.delivery_window_start && po.delivery_window_end ? `
                            <div class="font-medium">${new Date(po.delivery_window_start).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })} - ${new Date(po.delivery_window_end).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</div>
                        ` : '<span class="text-slate-400">Not specified</span>'}
                    </div>
                </div>

                <div class="mb-6">
                    ${itemsHtml}
                </div>

                <!-- Party Information -->
                <details class="mt-4 border border-slate-200 rounded-lg">
                    <summary class="cursor-pointer p-3 bg-slate-50 font-bold text-slate-700 hover:bg-slate-100 rounded-t-lg">
                        Party Information (Ship To, Bill To, Buying & Selling Party)
                    </summary>
                    <div class="p-4 grid grid-cols-1 md:grid-cols-2 gap-4">
                        ${formatPartyInfo('Ship To', rawData.shipToParty)}
                        ${formatPartyInfo('Bill To', rawData.billToParty)}
                        ${formatPartyInfo('Buying Party', rawData.buyingParty)}
                        ${formatPartyInfo('Selling Party', rawData.sellingParty)}
                    </div>
                </details>

                <!-- Detailed Item Information -->
                <details class="mt-4 border border-slate-200 rounded-lg">
                    <summary class="cursor-pointer p-3 bg-slate-50 font-bold text-slate-700 hover:bg-slate-100 rounded-t-lg">
                        Detailed Item Information (All Fields)
                    </summary>
                    <div class="p-4 space-y-4 max-h-96 overflow-auto">
                        ${items && items.length > 0 ? items.map((item, idx) => `
                            <div class="border border-slate-200 rounded-lg p-3 ${idx % 2 === 0 ? 'bg-white' : 'bg-slate-50'}">
                                <div class="font-bold text-blue-600 mb-2">Item ${idx + 1}: ${item.amazonProductIdentifier || 'N/A'}</div>
                                <div class="grid grid-cols-2 md:grid-cols-3 gap-2 text-xs">
                                    <div><span class="text-slate-500">ASIN:</span> <span class="font-medium">${item.amazonProductIdentifier || '-'}</span></div>
                                    <div><span class="text-slate-500">Vendor SKU:</span> <span class="font-medium">${vendorSkus[item.amazonProductIdentifier] || item.vendorProductIdentifier || '-'}</span></div>
                                    <div><span class="text-slate-500">External ID:</span> <span class="font-medium">${item.externalId || '-'}</span></div>
                                    <div><span class="text-slate-500">Ordered Qty:</span> <span class="font-medium">${item.orderedQuantity?.amount || '-'} ${item.orderedQuantity?.unitOfMeasure || ''}</span></div>
                                    <div><span class="text-slate-500">Acknowledged Qty:</span> <span class="font-medium ${(item.acknowledgedQuantity?.amount || 0) < (item.orderedQuantity?.amount || 0) ? 'text-amber-600' : ''}">${item.acknowledgedQuantity?.amount || '-'} ${item.acknowledgedQuantity?.unitOfMeasure || ''}</span></div>
                                    <div><span class="text-slate-500">Received Qty:</span> <span class="font-medium">${item.receivedQuantity?.amount || '-'} ${item.receivedQuantity?.unitOfMeasure || ''}</span></div>
                                    <div><span class="text-slate-500">Net Cost:</span> <span class="font-medium">${item.netCost?.amount ? '$' + parseFloat(item.netCost.amount).toFixed(2) + ' ' + (item.netCost.currencyCode || '') : '-'}</span></div>
                                    <div><span class="text-slate-500">List Price:</span> <span class="font-medium">${item.listPrice?.amount ? '$' + parseFloat(item.listPrice.amount).toFixed(2) + ' ' + (item.listPrice.currencyCode || '') : '-'}</span></div>
                                    <div><span class="text-slate-500">Back Order Allowed:</span> <span class="font-medium">${item.isBackOrderAllowed !== undefined ? (item.isBackOrderAllowed ? 'Yes' : 'No') : '-'}</span></div>
                                </div>
                            </div>
                        `).join('') : '<div class="text-slate-400">No items</div>'}
                    </div>
                </details>

                <!-- Import Details (if available) -->
                ${rawData.importDetails ? `
                <details class="mt-4 border border-slate-200 rounded-lg">
                    <summary class="cursor-pointer p-3 bg-slate-50 font-bold text-slate-700 hover:bg-slate-100 rounded-t-lg">
                        Import Details
                    </summary>
                    <div class="p-4 text-sm">
                        <div class="grid grid-cols-2 gap-2">
                            <div><span class="text-slate-500">Method of Payment:</span> <span class="font-medium">${rawData.importDetails.methodOfPayment || '-'}</span></div>
                            <div><span class="text-slate-500">International Commercial Terms:</span> <span class="font-medium">${rawData.importDetails.internationalCommercialTerms || '-'}</span></div>
                            <div><span class="text-slate-500">Port of Delivery:</span> <span class="font-medium">${rawData.importDetails.portOfDelivery || '-'}</span></div>
                            <div><span class="text-slate-500">Import Containers:</span> <span class="font-medium">${rawData.importDetails.importContainers || '-'}</span></div>
                            <div><span class="text-slate-500">Shipping Instructions:</span> <span class="font-medium">${rawData.importDetails.shippingInstructions || '-'}</span></div>
                        </div>
                    </div>
                </details>
                ` : ''}

                <!-- Payment Terms -->
                ${rawData.paymentTerms ? `
                <details class="mt-4 border border-slate-200 rounded-lg">
                    <summary class="cursor-pointer p-3 bg-slate-50 font-bold text-slate-700 hover:bg-slate-100 rounded-t-lg">
                        Payment Terms
                    </summary>
                    <div class="p-4 text-sm">
                        <div class="grid grid-cols-2 gap-2">
                            <div><span class="text-slate-500">Type:</span> <span class="font-medium">${rawData.paymentTerms.type || '-'}</span></div>
                            <div><span class="text-slate-500">Discount Percent:</span> <span class="font-medium">${rawData.paymentTerms.discountPercent || '-'}%</span></div>
                            <div><span class="text-slate-500">Net Due Days:</span> <span class="font-medium">${rawData.paymentTerms.netDueDays || '-'}</span></div>
                        </div>
                    </div>
                </details>
                ` : ''}

                <details class="mt-4 border border-slate-200 rounded-lg">
                    <summary class="cursor-pointer p-3 bg-slate-50 font-bold text-slate-700 hover:bg-slate-100 rounded-t-lg">View Raw JSON Data</summary>
                    <pre class="p-4 bg-slate-900 text-slate-300 rounded-b-lg text-xs overflow-auto max-h-64">${JSON.stringify(rawData, null, 2)}</pre>
                </details>
            `;

            document.getElementById('poModal').classList.remove('hidden');
            document.getElementById('poModal').classList.add('flex');
        }

        function closePOModal() {
            document.getElementById('poModal').classList.add('hidden');
            document.getElementById('poModal').classList.remove('flex');
        }

        // Close modal on outside click
        document.getElementById('poModal').addEventListener('click', function(e) {
            if (e.target === this) closePOModal();
        });

        // Handle URL query parameter to scroll to specific PO
        document.addEventListener('DOMContentLoaded', function() {
            const urlParams = new URLSearchParams(window.location.search);
            const targetPO = urlParams.get('po');

            if (targetPO) {
                const row = document.getElementById('po-row-' + targetPO);
                if (row) {
                    // Highlight the row
                    row.classList.add('bg-blue-100', 'ring-2', 'ring-blue-500', 'ring-inset');
                    row.classList.remove('hover:bg-slate-50');

                    // Scroll to the row after a short delay
                    setTimeout(() => {
                        row.scrollIntoView({ behavior: 'smooth', block: 'center' });

                        // Auto-open the PO details modal
                        showPODetails(targetPO);
                    }, 200);

                    // Remove highlight after 5 seconds but keep the row visible
                    setTimeout(() => {
                        row.classList.remove('bg-blue-100', 'ring-2', 'ring-blue-500', 'ring-inset');
                        row.classList.add('hover:bg-slate-50', 'bg-yellow-50');
                    }, 5000);
                }
            }
        });
    </script>
</body>
</html>
