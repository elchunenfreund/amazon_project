# Database Configuration
DATABASE_URL=postgresql://localhost:5432/amazon_tracker

# Amazon SP-API OAuth Configuration
# Get these from: https://sellercentral.amazon.com/apps/develop
LWA_CLIENT_ID=your_lwa_client_id_here
LWA_CLIENT_SECRET=your_lwa_client_secret_here

# OAuth Redirect URI (must match exactly with Amazon Developer Console)
# For Heroku: https://YOUR-APP-NAME.herokuapp.com/auth/amazon/callback
# For local testing: http://localhost:3000/auth/amazon/callback
OAUTH_REDIRECT_URI=https://YOUR-APP-NAME.herokuapp.com/auth/amazon/callback

# OAuth Scope (default: sellingpartnerapi::migration)
# Other scopes: sellingpartnerapi::notifications, sellingpartnerapi::orders, etc.
OAUTH_SCOPE=sellingpartnerapi::migration

# OAuth State Secret (for signing state tokens)
# Generate with: openssl rand -hex 32
OAUTH_STATE_SECRET=generate_a_random_secret_here_minimum_32_characters

# Token Encryption Key (for encrypting OAuth tokens at rest)
# Must be a 32-byte (64 character) hex string for AES-256-GCM encryption
# Generate with: openssl rand -hex 32
# If not set, tokens will be stored unencrypted (not recommended for production)
TOKEN_ENCRYPTION_KEY=generate_a_64_character_hex_string_here

# Admin Seed Credentials (for seed-admin.js script)
# These are only needed when running the seed-admin.js script
ADMIN_EMAIL=admin
ADMIN_PASSWORD=your_secure_admin_password_here

# AWS Credentials (if needed for SP-API)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Server Configuration
PORT=3000
NODE_ENV=development

HEROKU_API=your_heroku_api_key_here